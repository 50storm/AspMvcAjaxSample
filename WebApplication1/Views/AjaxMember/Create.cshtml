@model MvcBasic.Models.Member


@{
    ViewBag.Title = "AjaxSample";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{


    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Member</h4>
        <h5>@ViewBag.mode</h5>
        <p>

            
            <input type="radio" name="mode" value="0">登録
            <input type="radio" name="mode" value="1">修正
